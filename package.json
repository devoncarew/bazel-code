{
    "name": "bazel-code",
    "displayName": "Bazel",
    "description": "Bazel support for Visual Studio Code.",
    "version": "0.1.10",
    "publisher": "DevonDCarew",
    "license": "SEE LICENSE IN LICENSE",
    "engines": {
        "vscode": "^1.13.0"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/devoncarew/bazel-code.git"
    },
    "icon": "media/bazel-logo.png",
    "activationEvents": [
        "onLanguage:bazel"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "bazel",
                "extensions": [
                    ".bzl",
                    ".BUILD"
                ],
                "filenames": [
                    "BUILD",
                    "BUILD.bazel",
                    "WORKSPACE",
                    "WORKSPACE.bazel"
                ],
                "aliases": [
                    "Bazel"
                ],
                "configuration": "./syntax/bazel-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bazel",
                "scopeName": "source.bazel",
                "path": "./syntax/MagicPython.tmLanguage.json"
            },
            {
                "scopeName": "source.regexp.python",
                "path": "./syntax/MagicRegExp.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Bazel Configuration",
            "properties": {
                "bazel.buildifierPath": {
                    "type": "string",
                    "description": "The path to buildifer."
                }
            }
        },
        "snippets": [
            {
                "language": "bazel",
                "path": "./snippets/bazel.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "./node_modules/typescript/bin/tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^2.3.3",
        "typescript": "^2.2.1",
        "vscode": "^1.1.0"
    },
    "dependencies": {
        "which": "^1.3.0"
    }
}
